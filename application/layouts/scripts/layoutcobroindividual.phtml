				conceptoSelect:{
					required: true
				},	
				golsaInput:{
					required: true
				},
				ingresoMontoUF:{
					required: true
				},	
				ingresoMontoMoneda:{
					required: true
				},						
				dateCobroInput:{
					required: true
				},
				rutSelect:{
					required: true,
				},
				formaPagoSelect:{
					required: true
				},
				ingresoCheck:{
					required: false
				}				
			},
			messages:
			{			
				conceptoSelect:"Debe seleccionar un elemento de la lista.",		
				golsaInput:"Debe ingresar la glosa",	
				ingresoMontoUF:"Debe ingresar el monto en uf",	
				ingresoMontoMoneda:"Debe ingresar el valor en moneda",
				dateCobroInput:"De ingresar la fecha de cobro",
				rutSelect:"Debe ingresar el rut",
				formaPagoSelect:"Debe seleccionar un elemento de la lista",				
			},
			invalidHandler:function(event, validator)
			{
				
			},	
			submitHandler:function(form)
			{		
				if($('#valorUfInput').val()!="")
				{
					url='/index.php/cobroindividual/ingresarcobro';
					
					//si es 2 ingresa a tabla de cobro individual
					var esingreso="2";
					
					if($('.esingreso').hasClass('checked'))
					{
						//si es 1 ingreso a tabla de honorarios
						esingreso="1";						
					}
					
					var datoCobro="idConcepto="+$('#conceptoSelect').val()+
							 	  "&idRut="+idRut+
								  "&glosa="+$('#golsaInput').val()+
							 	  "&montoCobro="+$('#ingresoMontoUF').val()+
							 	  "&observacion="+$('#observacionesInput').val()+
							 	  "&fecha="+$('#dateCobroInput').val()+
							 	  "&idPago="+$('#formaPagoSelect').val()+
							 	  "&esingreso="+esingreso+
							 	  "&valorUF="+valorUF+
							 	  "&valorMoneda="+$('#ingresoMontoMoneda').val();	

					$.ajax({
					    url: url,  
					    type: "POST",
					    data: datoCobro,
					    success: function(datos)
					    {					   					    
							if(datos.registro[0]=='1')
							{
								$('#registroCobroCorrecto').removeClass('hide');
								limpiarControles();
							}
							else if(datos.registro[0]=='2')
							{
								$('#registroCobroIncorrecto').removeClass('hide');
								
							}
					    },
				    	error : function(xhr, status) 
		 			    {
				    		$('#registroCobroIncorrecto').removeClass('hide');
							
		 			    }
					}); 
					
				}
				else
				{
					$('#registrarValorUf').removeClass('hide');	
				}		
			}			
		});

		$('#buttonRegistrarValorUf').on('click',function()
		{
			$('#registrarValorUf').addClass('hide');
		});

		//accion para saber si el concepto elejido es ingreso o no,
		//para que el checkbox de esingreso se seleccione automaticamente.
		$('#conceptoSelect').on('change',function()
		{	
			url="/index.php/concepto/obtener";
			
			var dato="idConcept="+$('#conceptoSelect').val();				
		
			$.ajax({
			    url: url,  
			    type: "POST",
			    data: dato,
			    success: function(datos)
			    {			
					if(datos.concepto[2]=="1")
					{
						$('.esingreso').addClass('checked');
						$('.esingreso').attr({"aria-checked":true});
						
						$('#formaPagoSelect').find('option[value="5"]').attr({"disabled":false});						
						$('#formaPagoSelect').find('option[value="1"],option[value="2"],option[value="3"],option[value="4"]').attr({"disabled":true});

						$('#formaPagoSelect').val(5);
					}
					else
					{
						$('.esingreso').removeClass('checked');
						$('.esingreso').attr({"aria-checked":false});
						$('#formaPagoSelect').attr({"disabled":false});
						
						$('#formaPagoSelect').val('');
						$('#formaPagoSelect').find('option[value="5"]').attr({"disabled":true});			
						$('#formaPagoSelect').find('option[value="1"],option[value="2"],option[value="3"],option[value="4"]').attr({"disabled":false});
						
					}					
			    }
			}); 
			
		});
		
		//accion para transforma la uf en moneda para el valor de mensualidad
		$('#ingresoMontoUF').on('keyup',function()
		{			
			if($('#ingresoMontoUF').val()!='')
			{
				montoUF=(parseFloat(valorUF)*parseFloat($('#ingresoMontoUF').val())).toFixed(0);							
				$('#ingresoMontoMoneda').val(montoUF);

				if(!$('.esingreso').hasClass('checked'))
				{				
					if(parseFloat(montoUF)==0)
					{
						$('#formaPagoSelect').val(6);					
						$('#formaPagoSelect').find('option[value="1"],option[value="2"],option[value="3"],option[value="4"]').attr({"disabled":true});
						$('#formaPagoSelect').find('option[value="6"],option[value="5"]').attr({"disabled":false});
					}
					else
					{
						$('#formaPagoSelect').val('');
						$('#formaPagoSelect').attr({"disabled":false});
						$('#formaPagoSelect').find('option[value="1"],option[value="2"],option[value="3"],option[value="4"]').attr({"disabled":false});
						$('#formaPagoSelect').find('option[value="6"],option[value="5"]').attr({"disabled":true});	
					}
				}
			}
			else
			{
				$('#ingresoMontoMoneda').val('');
			}
		});
		
		//accion para transforma el valor monetario de la mensualidad a uf
		$('#ingresoMontoMoneda').on('keyup',function()
		{			
			if($('#ingresoMontoMoneda').val()!='')
			{
				montoMoneda=$(this).val();			
				$('#ingresoMontoUF').val((parseFloat($('#ingresoMontoMoneda').val())/parseFloat(valorUF)).toFixed(2));

				if(!$('.esingreso').hasClass('checked'))
				{
					if(parseFloat(montoMoneda)==0)
					{
						$('#formaPagoSelect').val(6);					
						$('#formaPagoSelect').find('option[value="1"],option[value="2"],option[value="3"],option[value="4"]').attr({"disabled":true});
						$('#formaPagoSelect').find('option[value="6"],option[value="5"]').attr({"disabled":false});
					}
					else
					{
						$('#formaPagoSelect').val('');					
						$('#formaPagoSelect').attr({"disabled":false});
						$('#formaPagoSelect').find('option[value="1"],option[value="2"],option[value="3"],option[value="4"]').attr({"disabled":false});
						$('#formaPagoSelect').find('option[value="6"],option[value="5"]').attr({"disabled":true});	
					}
				}
				
			}
			else
			{
				$('#ingresoMontoUF').val('');
			}
		});

		$('#buttonRegistroCobroCorrecto').on('click',function()
		{
			$('#registroCobroCorrecto').addClass('hide');
		});

		$('#buttonRegistroCobroIncorrecto').on('click',function()
		{
			$('#registroCobroIncorrecto').addClass('hide');
		});
		
		$('#ingresoCheck').iCheck({
	       checkboxClass: 'icheckbox_minimal-blue esingreso',
	    });

	    $('#buttonActualizarUF').on('click',function()
	   	{
		   	$('#actualizarUF').addClass('hide');
		});

		function limpiarControles()
		{
			$('.control').val('');
			$('.esingreso').removeClass('checked');
		  	$('.esingreso').attr({"aria-checked":false});
		}

		$('#dateCobroInput').on('changeDate',function()
		{
			fecha=$('#dateCobroInput').val().toString().split('-');
			
			url="/index.php/valores/obteneruf";

			data="anioUf="+$.trim(fecha['2'].toString())+"&mesUf="+$.trim(fecha['1'].toString());

			fecha="";

			objetivo='#valorUfInput';
			
			$(objetivo).empty();

			$('<option>').
			attr({value:"0"}).
			text('Seleccione').
			prop({disabled: false}).
			appendTo(objetivo);

			$.ajax({
			    url: url,  
			    type: "POST",
			    data: data,  
			    async:false,
			    success: function(datos)
			   	{		 				  
			    	if(datos.valoruf.length>0)
			    	{
						$('<option selected="selected">').
						attr({value:datos.valoruf[1]}).
						text("$ "+datos.valoruf[0]).
						appendTo(objetivo);
						
						$('#buttonCobroIndividual').attr({"disabled":false});

						$('#actualizarUF').addClass('hide');

						valorUF=parseFloat(datos.valoruf[0]);

						$('#ingresoMontoUF').val('');
						$('#ingresoMontoMoneda').val('');
			    	
				    }
				    else
				    {
				    	 $('<option selected="selected">').
						 attr({value:'sinuf'}).
						 text("Sin Uf").
						 appendTo(objetivo);

						 $('#actualizarUF').removeClass('hide');
						   
						 $('#buttonCobroIndividual').attr({"disabled":true});
				    }
		 	    }
			}); 
		});

		$('#dateCobroInput').datepicker({
			autoclose:true
		});
	    
