	    function fechaActual()
		{
			var d = new Date();

			var month = d.getMonth()+1;
			var day = d.getDate();			

			var fecha =  (day<10 ? '0' : '') + day + '-' +(month<10 ? '0' : '') + month + '-' +d.getFullYear();

			$('#dateCobroInput').val(fecha);
		    
		}  
		


