			},	
			submitHandler:function(form)
			{
				form.submit();
			}
		});
		
    	obtenerEjecutivos('#ejecutivoSelect');
    	
		if(<?= $this->idEjecutivo ?>!='0')
		{
			$('#ejecutivoSelect').val(<?= $this->idEjecutivo ?>);
			obtenerClientesByjecutivo('#clienteEjecutivoSelect',$('#ejecutivoSelect').val());
		}

		if(<?= $this->idCliente ?>!='0')
		{
			if($('#ejecutivoSelect').val()!='')
			{
				$('#clienteEjecutivoSelect').val(<?= $this->idCliente ?>);
				obtenerRutCliente('#rutClieneteSelect',$('#clienteEjecutivoSelect').val());
			}
		}

		if(<?= $this->idRut ?>!='0')
		{
			if($('#clienteEjecutivoSelect').val()!='')
			{	
				$('#rutClieneteSelect').val(<?= $this->idRut ?>);
			}
		}

	  	$('.mensualidad').number(true,0,',','.');

	  	$('.servicio').number(true,0,',','.');
	  	

	  	$('#buttonActualizarUF').on('click',function()
	  	{
		  	$('#actualizarUF').addClass('hide');
		});

		$('#ejecutivoSelect').select2();
		$('#clienteEjecutivoSelect').select2();
		$('#rutClieneteSelect').select2();

		$('#ejecutivoSelect').on('change',function()
		{
			obtenerClientesByjecutivo('#clienteEjecutivoSelect',$('#ejecutivoSelect').val());
		});
		
		$('#clienteEjecutivoSelect').on('change',function()
		{
			obtenerRutCliente('#rutClieneteSelect',$('#clienteEjecutivoSelect').val());
		});	

		$('#dateCobroInput').on('click',function()
		{
			$('#buttonMensualidadServicio').attr({"disabled":true});
		});	

		$('#dateCobroInput').on('changeDate',function(){

			fecha=$('#dateCobroInput').val().toString().split('-');
			
			url="/index.php/valores/obteneruf";

			data="anioUf="+$.trim(fecha['1'].toString())+"&mesUf="+$.trim(fecha['0'].toString());

			fecha="";

			objetivo='#valorUF';
			
			$(objetivo).empty();

			$('<option>').
			attr({value:"0"}).
			text('Seleccione').
			prop({disabled: false}).
			appendTo(objetivo);

			$.ajax({
			    url: url,  
			    type: "GET",
			    data: data,  
			    success: function(datos)
			   	{		 				  
			    	if(datos.valoruf.length>0)
			    	{
						$('<option selected="selected">').
						attr({value:datos.valoruf[1]}).
						text("$ "+datos.valoruf[0]).
						appendTo(objetivo);

						valorUF=datos.valoruf[0];
						
						
						$('#buttonSubmit').attr({"disabled":false});
						$('#actualizarUF').addClass('hide');						
				    }
				    else
				    {
				    	 $('<option selected="selected">').
						   attr({value:'sinuf'}).
						   text("Sin Uf").
						   appendTo(objetivo);
						   $('#actualizarUF').removeClass('hide');
						   $('#buttonMensualidadServicio').attr({"disabled":true});
						   $('#buttonSubmit').attr({"disabled":true});
				    }
		 	    }
			}); 
		});

		$('#dateCobroInput').datepicker({
			 format: "mm-yyyy",
			 viewMode: "months", 
			 minViewMode: "months",
			 autoclose:true
		});				

		$('#buttonMensualidadServicio').on('click',function()
		{
				if($('#dateCobroInput').val()!='')
				{				
					var datosMensualidadServicio=new Array();
	
					var fechaIngreso=$('#dateCobroInput').val();
					var valorUF=$('#valorUF option:selected').text().toString().replace('$','');
					var idUf=$('#valorUF option:selected').val();
		
					$('#tableMensualidadServicio tbody tr').each(function(index)
					{
						var idRut="", valorMensualidad="", valorServicio="", formaPago="", valorMonedaMensualidad="", valorMonedaServicio="";
														 
						$(this).children('td').each(function(index2)
						{									
							 switch(index2)
							 {
							  	case 0:		
		
							  		idRut=$(this).text();
								  	
						 			break;
		
							  	case 5:		
		
									if($(this).children('div.input-group').find('input').val()=='')
									{
										valorMensualidad='0';
									}
									else
									{
										montoUFmensualidad=(parseFloat($(this).children('div.input-group').find('input').val().toString().replace(/\./g,''))/parseFloat($.trim(valorUF)));
										valorMensualidad=montoUFmensualidad.toFixed(2); 
										valorMonedaMensualidad=$(this).children('div.input-group').find('input').val().toString().replace(/\./g,'');
										validaNumeroNegativo(montoUFmensualidad);
									}				  		
								  	
							 		break;
		
							  	case 6:		
		
							  		if($(this).children('div.input-group').find('input').val()=='')
							  		{
										valorServicio='0';
							  		}
									else
									{
										montoUFservicio=(parseFloat($(this).children('div.input-group').find('input').val().toString().replace(/\./g,''))/parseFloat($.trim(valorUF)));
										valorServicio=montoUFservicio.toFixed(2);
										valorMonedaServicio=$(this).children('div.input-group').find('input').val().toString().replace(/\./g,'');
										validaNumeroNegativo(valorServicio);
									}					  		 
									
							 		break;
							 								  	
							  	case 7:		
		
							  		formaPago= $(this).children('select').val(); 							
								  	
							 		break;
							  }	 					 				  			 										
						 });
	
							if( (valorMensualidad!='0'&&valorMensualidad!='0.00') || (valorServicio!='0'&&valorServicio!='0.00'))
							{					 			
								datosMensualidadServicio.push({idRut,valorMensualidad,valorServicio,formaPago,fechaIngreso,valorUF,idUf,valorMonedaMensualidad,valorMonedaServicio});	  						
							}		 
					});
		
					var json=JSON.stringify(datosMensualidadServicio);
					
					url='/index.php/cobromensualidadservicio/registracobromensualidadservicio';
					
					data="data="+json;
					
					if(!negativo)
					{	
						if(datosMensualidadServicio.length>0)
						{					
							$.ajax({
							    url: url,  
							    type: "POST",
							    data: data,  
							    success: function(datos)
							   	{
							    	if(datos.registro[0]=='1')
							    	{						    	
								    	jAlert("Cobro Registrado Correctamente!","Alerta");	

								    	$('#buttonMensualidadServicio').attr({"disabled":true});
								    	
								    	window.location.href = dominio+"ingresomensualidadservicios";
							    	}
							    	else if(datos.registro[0]=='2')
								    {
							    		$('#problemasRegistroCobrosMS').removeClass('hide');
							    		
							    	}
							    	else
								    {
							    		$('#problemasRegistroCobrosMS').removeClass('hide');
							    		
							    	}
						 	    }
							}); 
						}
						else
						{
							$('#sinCobros').removeClass('hide');
							
						}	
					}
					else
					{
						$('#numeroNegativo').removeClass('hide');
					}

					
	
					datosMensualidadServicio=[];		
				}
				else
				{
					$('#seleccioneFecha').removeClass('hide');
					$('#buttonMensualidadServicio').attr({"disabled":true});
				}
		
		});	


		$('#buttonNumeroNegativo').on('click',function()
		{
			$('#numeroNegativo').addClass('hide');
		});


		$('#buttonSeleccioneFecha').on('click',function()
		{
			$('#seleccioneFecha').addClass('hide');
		});
				
		var negativo=false;

		function validaNumeroNegativo(numero)
		 {	
			 if(numero!='')		
			 {
				 if(numero<0)
				 {
					 negativo= true;
				 }	 
			 }	 			  

			 return negativo;
		 }

		$('#buttonRegistroCobrosMS').on('click',function()
		{
			$('#registroCobrosMS').addClass('hide');
		});

		$('#buttonProblemasRegistroCobrosMS').on('click',function()
		{
			$('#problemasRegistroCobrosMS').addClass('hide');
		});

		$('#buttonSinCobros').on('click',function()
		{
			$('#sinCobros').addClass('hide');
		});

		//funcion para obtener a los ejecutvos y cargarlos al combobox
		function obtenerEjecutivos(objetivo)
		{				
		   url = '/index.php/usuario/listar';
		 	    
		   $(objetivo).empty();
						
		   $('<option>').
		   attr({value:""}).
		   text('Seleccione').
		   prop({disabled: false, selected: true}).
		   appendTo(objetivo);

			var dato="";
				
				$.ajax({
				    url: url,  
				    type: "GET",
				    data: dato,  
				    async:false,
				    success: function(datos)
				   	{
				    	 $.each(datos.data, function( index, value ) 
						 {								
							 $('<option>').
							   prop({value:value[0]}).
							   text(value[1]).
							   appendTo(objetivo);
						});
			 	    }
				}); 			 		
		 }

		 function obtenerClientesByjecutivo(objetivo,idEjecutivo)
		 {				
			    url = '/index.php/cliente/listarbyejecutivo?idUsuario='+idEjecutivo;
			    
				$(objetivo).empty();			
						
				$('<option>').
				attr({value:""}).
				text('Seleccione').
				prop({disabled: false}).
				appendTo(objetivo);

				var dato="";
			
				$.ajax({
				    url: url,  
				    type: "GET",
				    data: dato,  
				    async:false,
				    success: function(datos){
					    
				    	 $.each(datos.data, function( index, value ) {
								
							 $('<option>').
							   prop({value:value[0]}).
							   text(value[1]).
							   appendTo(objetivo);
						});
				    }
				}); 			
		 } 

		 function obtenerRutCliente(objetivo,idCliente)
		 {				
			    url = '/index.php/rut/listadorutbyidcliente';
				$(objetivo).empty();
						
				$('<option>').
				attr({value:""}).
				text('Seleccione').
				prop({disabled: false, selected: true}).
				appendTo(objetivo);

				var dato="idCliente="+idCliente;
			
				$.ajax({
				    url: url,  
				    type: "GET",
				    data: dato,  
				    async:false,
				    success: function(datos){

				    	 $.each(datos.data, function( index, value ) {

				    		 var detalle=value[3]+" - "+value[1];				    		 	
							 $('<option>').
							   prop({value:value[0]}).
							   text(detalle).
							   appendTo(objetivo);
						});
					    
				    }
				}); 
		 } 
			
	});
