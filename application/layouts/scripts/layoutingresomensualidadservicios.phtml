	<script type="text/javascript">

    $(function()
	{	 

    	var dominio = '<?=$this->urlaplicacion?>';

    	$('#formBusquedaMensualidadesServicios').validate({
			debug:true,
			rules:{
				ejecutivoSelect:{
					required:false
				},
				clienteEjecutivoSelect:{
