				form.submit();	
			}
		});

		$('.dateCobroF29').datepicker({
			 format: 'mm-yyyy',
			 viewMode: 'mm-yyyy', 
			 minViewMode: 'months',
			 autoclose:true
		}).attr("placeholder", 'mm-yyyy');
	
		obtenerEjecutivos('#ejecutivoSelect');

		if(<?= $this->idEjecutivo ?>!='0')
