			}
		}


		$('#ejecutivoSelect').select2();
		$('#tipoCobroSelect').select2();
		$('#idClienteSelect').select2();
		$('#idRutSelect').select2();
		
		$('.montoImpuesto').number( true, 0,',','.' );

		//**********SECCION MODIFICA IMPUESTO UNICO*************//

		
		$('#buttonModificaImpuesto').on('click',function()
		{
			var datosImpuestoUnico=new Array();		
					    
			$('#tableModificaImpuestoUnico tbody tr').each(function(index)
			{
					var idImpuesto,valorImpuesto;
						
					$(this).children('td').each(function(index2)
					{							
						switch(index2)
						{				
							case 0: idImpuesto=$(this).text();
									break;
									
							case 6: if($(this).children('div.input-group').find('input').val()!='')
									{
										valorImpuesto=$(this).children('div.input-group').find('input').val();
										validaNumeroNegativo(valorImpuesto);
									}
									else
									{
										valido = true;
									}
										
									break;
						}						
					});	
			
							
					datosImpuestoUnico.push({idImpuesto,valorImpuesto});
											
			});
						
			var jsonImpuesto=JSON.stringify(datosImpuestoUnico);

			url='/index.php/impuesto/editarimpuesto';	
			var data ="jsonImpuesto="+jsonImpuesto;

			if(!valido)
			{
				if(!negativo)
				{
					if(datosImpuestoUnico.length>0)
					{					
						$.ajax({
						    url: url,  
						    type: "POST",
						    data: data, 
						    success: function(datos)
						    {
								if(datos.modifica[0]=='1')
								{
									jAlert("Datos actualizados correctamente!","OK");
								}
								else if(datos.modifica[0]=='2')
								{
									jAlert("Problemas al realizar!","Ops !");
								} 
								else if(datos.modifica[0]=='3')
								{
									jAlert("Problemas al realizar!","Ops !");
								} 		    		    		
							}, 
							error:function(status)
							{
								
							}
						});								
					}
					else
					{
						jAlert("Sin datos para actualizar!","Alerta!");
					}	
				}
				else
				{
					jAlert("No se permiten numeros negativos!","Ops !");
					negativo = false;
				}
			}
			else
			{
				jAlert("Todos los campos son necesarios!","Alerta!");
				valido = false;
			}
				
				
		});		
		
		//**********SECCION FILTROS BUSQUEDA*************// 		
						
